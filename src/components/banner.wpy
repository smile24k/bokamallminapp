<style lang="less">
  .banner{
    padding: 0 30rpx;
    background-color: #F4F5F6;
  }
  swiper{
    height: 488rpx;
    width: 100%;
    margin: 0 auto;
    swiper-item{
      image{
        width: 100%;
        height: 388rpx;
      }
      >.title{
        color: #101033;
        font-size: 16px;
        height: 100rpx;
        line-height: 100rpx;
      }
    }
  }
</style>
<template>
<view class="banner">
  <swiper autoplay circular>
      <block wx:for="{{moives}}" wx:key="id">
          <swiper-item>
              <image mode="aspectFill" @tap="jumpUrl({{item}})" src="{{item.images.small}}"></image>
              <view class="title">{{item.title}}</view>
          </swiper-item>
      </block>
  </swiper>
</view>
  
</template>
<script>
import wepy from 'wepy';
import constant from '@/common/constant';
export default class Banner extends wepy.component {
  data = {
    images:[],
    moives:[],
    someData:[]
  };

  events = {
    'banner-broadcast': (...args) => {
      let $event = args[args.length - 1];
      console.log($event);
      console.log(
        `${this.$name} receive ${$event.name} from ${$event.source.name}`
      );
    }
  };
  props = {
    moives:Array,
    twoWay: true
  }
  methods = {
    jumpUrl(item){
      console.log(item);
    }
  };
  computed = {
    someData () {
      return this.moives && this.data.someData
    }
  }

  onLoad() {
    wx.cloud.init({
      traceUser: true
    });
    wepy.showLoading({
      title: '加载中...', //提示的内容,
      mask: true
    });
    
    wx.cloud.callFunction({
      name: 'moive',
      success: res => {
        console.log('[云函数] [douban] data: ', res.result);
        this.moives = res.result.subjects;
        wepy.hideLoading();
        
        this.$apply();
      },
      fail: err => {
        console.error('[云函数] [douban] 调用失败', err);
      }
    });
  }
}
</script>
